    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff20b8d0"
    tools:context="com.example.jaishreeupreti.notify.NotificationsActivity">

   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/nlist"
       android:background="#ff6fd0cd">

   </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="oops!! no notifications!!"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:layout_alignRight="@+id/nlist"
        android:layout_alignEnd="@+id/nlist" />

</RelativeLayout>
