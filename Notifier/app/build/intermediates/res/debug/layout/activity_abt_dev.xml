<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/reb2"
    tools:context="com.example.notifier.AbtApp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:text="About Developers"
        android:id="@+id/title"
        android:textSize="40sp"
        android:layout_marginTop="60sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/texthead"
        android:textColor="@android:color/white"
        android:layout_marginTop="25dp"
        android:textSize="24sp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/texthead"
    android:orientation="horizontal"
    android:id="@+id/ll"
    android:layout_marginTop="40sp"
    android:gravity="center"
    android:layout_marginLeft="16dp"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/jaishree"
        android:textSize="15sp"
        android:layout_weight="1"
        android:text="Jaishree Uprety \njaishree.12cs220@abes.ac.in"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/shantanu"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:text="Shantanu Agarwal\nshatanu.12cs222@abes.ac.in"
        android:textSize="15sp"
        android:layout_below="@+id/texthead"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/jaishree" />

</LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ll"
    android:textSize="24sp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100sp"
    android:textColor="@android:color/white"
    android:text="feel free to contact us."/>
</RelativeLayout>
